<Window x:Class="DeleteBinAndObj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="800" >
    <Grid Background="CornflowerBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBox x:Name="PathTextBox" HorizontalAlignment="Left" 
                     VerticalAlignment="Top" Width="350" Height="30"
                     IsReadOnly="True" Margin="10"/>

            <Button Content="Browse" Height="30" Width="50"
                    Click="Browse_OnClick"/>

            <Button Content="Read" Height="30" Width="70"
                    Click="Accept_OnClick" Margin="50,0,0,0"/>
        </StackPanel>
        <Grid Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <TextBlock Text="Bin" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="20"/>
                <ListBox x:Name="BinListBox" Margin="10" MinHeight="290" MaxHeight="290"/>
                <Button Content="Delete" HorizontalAlignment="Left" Margin="10,0,0,0" Height="30" Width="150"
                        Click="DeleteBin_OnClick"/>
            </StackPanel>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Obj" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="20"/>
                <ListBox x:Name="ObjListBox"  Margin="10" MinHeight="290" MaxHeight="290"/>
                <Button Content="Delete" HorizontalAlignment="Left" Margin="10,0,0,0" Height="30" Width="150"
                        Click="DeleteObj_OnClick"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
